@startuml

namespace system.WebServer {
class DataLogger {
  - mainLogger: Logger
  + GetLogger(): Logger
  + LogWarning(text: string)
  + LogError(text: string)
  + logData(data: string): void
}
class UserInterface {
  + displayInfo(): void
  + performAction(action: string): void
}
class EfficiencyAnalyzer {
  + analyze(): void
}
class Database {
  + saveData(data: string): void
}
}

namespace system.MonitoringDevice {

class EnergyConsumption {
  - consumption: float
  + updateConsumption(amount: float): void
}

class EnergyProduction {
  - production: float
  + updateProduction(amount: float): void
}
class PVPanel {
  - production: float
  - efficiency: float
  - status: boolean
  + calculateProduction(): float
  + updateStatus(): void
  + calculateEfficiency(): float
}
class PanelController {
  + activatePanel(): void
  + deactivatePanel(): void
}
class Battery {
  - capacity: float
  - current_charge: float
  - status: boolean
  + chargeBattery(amount: float): void
  + dischargeBattery(amount: float): void
  + calculate_currentBatery(amount: float): void
  + updateStatus(): void
}
class ElectricSensor {
  - voltage : float
  + getElectricData(): float
}
class FireDetector {
  + detectFire(): void
}
class DataGather {
  + receiveElectricData(data: ElectricData): void
  + receiveFireAlarmData(alarm: FireAlarmData): void
  + receiveBatteryData(data: BatteryData): void
  + sendDataToDatabase(): void
  + CONST: Pulltime
}
class MonitoringDevice {
  + optimize()
  + decisionMaking(): boolean
  + sendWarningDust(): String
  + sendWarningFire(): String
  + CONST : SendTime
}
class DustDetector {
  + detectDust(): void
}
DataGather "1" o-- "N" MonitoringDevice  : aggregation
MonitoringDevice "1" -- "1" PanelController
EnergyConsumption "1" -- "1" MonitoringDevice
EnergyProduction "1" -- "1" MonitoringDevice
PVPanel "1" -- "1" PanelController
DustDetector "1" -- "1" MonitoringDevice
MonitoringDevice "1" -- "1" PanelController
FireDetector "1" -- "1" MonitoringDevice
Battery "1" -- "1" MonitoringDevice
ElectricSensor "1" -- "1" MonitoringDevice
}
@enduml
